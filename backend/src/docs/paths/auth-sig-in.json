{
  "/auth/sign-in": {
    "post": {
      "summary": "Autentica o usuário",
      "description": "Busca dados do usuário e retorna o token de autenticação",
      "tags": [
        "Auth"
      ],
      "security": [
        {
          "bearerAuth": []
        }
      ],
      "requestBody": {
        "required": true,
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "exemple@gmail.com"
                },
                "senha": {
                  "type": "string",
                  "example": "senha123"
                }
              },
              "required": [
                "email",
                "senha"
              ]
            }
          }
        }
      },
      "responses": {
        "200": {
          "description": "Usuário autenticado com sucesso",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "token": {
                    "type": "string",
                    "example": "eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9..YqhUQIoqKFLb6XrzrAuS5hxWIX31PthsOd2qW47k3hQ"
                  },
                  "user": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "string",
                        "example": "b6919d62-ca62-472e-89f6-b29c2f3d1439"
                      },
                      "name": {
                        "type": "string",
                        "example": "Guilherme"
                      },
                      "email": {
                        "type": "string",
                        "example": "gui@gmail.com"
                      },
                      "cpf": {
                        "type": "string",
                        "example": "11122233344"
                      },
                      "password": {
                        "type": "string",
                        "example": "$2b$10$nkv2TG6VSYIsaNukBGwFtOAmrZac.v7uNaccYdB3XABVrnjdHEJIy"
                      },
                      "avatar": {
                        "type": "string",
                        "example": "http://localhost:3000/public/images/profile.jpeg"
                      },
                      "xp": {
                        "type": "integer",
                        "example": 0
                      },
                      "level": {
                        "type": "integer",
                        "example": 0
                      },
                      "deletedAt": {
                        "type": "string",
                        "nullable": true,
                        "example": null
                      },
                      "UserArchievement": {
                        "type": "array",
                        "items": {
                          "type": "object"
                        },
                        "example": []
                      }
                    }
                  }
                }
              }
            }
          }
        },
        "400": {
          "description": "Erro de autenticação. E-mail ou senha inválidos.",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "error": {
                    "type": "string",
                    "example": "Credenciais inválidas"
                  }
                }
              }
            }
          }
        },
        "500": {
          "$ref": "#/components/responses/InternalServerError"
        }
      }
    }
  }
}