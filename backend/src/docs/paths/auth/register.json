{
  "post": {
    "summary": "Cadastro de usuário",
    "description": "Endpoint para cadastrar um novo usuário.",
    "tags": ["Auth"],
    "requestBody": {
      "content": {
        "application/json": {
          "schema": {
            "$ref": "../../components/schemas.json#/UserCreateSchema"
          }
        }
      }
    },
    "responses": {
      "201": {
        "description": "Created",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "Usuário cadastrado com sucesso."
                }
              }
            }
          }
        }
      },
      "400": {
        "$ref": "../../components/responses.json#/BadRequeste"
      },
      "409": {
        "description": "Conflict",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "O e-mail ou CPF informado já pertence a outro usuário."
                }
              }
            }
          }
        }
      },
      "500": {
        "$ref": "../../components/responses.json#/InternalServerError"
      }
    }
  }
}
