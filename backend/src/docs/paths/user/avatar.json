{
  "put": {
    "summary": "Editar foto de perfil do usuário",
    "description": "Endpoint para a foto de perfil do usuário logado.",
    "tags": ["User"],
    "security": [
      {
        "bearerAuth": []
      }
    ],
    "requestBody": {
      "content": {
        "multipart/form-data": {
          "schema": {
            "type": "object",
            "properties": {
              "avatar": {
                "type": "string",
                "format": "binary",
                "description": "Arquivo de imagem (PNG ou JPG)."
              }
            },
            "required": ["avatar"]
          }
        }
      }
    },
    "responses": {
      "200": {
        "description": "OK",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "avatar": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "400": {
        "description": "Bad Requeste",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": {
                  "type": "string",
                  "example": "A imagem deve ser um arquivo PNG ou JPG."
                }
              }
            }
          }
        }
      },
      "401": {
        "$ref": "../../components/responses.json#/Unauthorized"
      },
      "403": {
        "$ref": "../../components/responses.json#/Forbidden"
      },
      "500": {
        "$ref": "../../components/responses.json#/InternalServerError"
      }
    }
  }
}
